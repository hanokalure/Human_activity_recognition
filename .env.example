# Daily Activities Video Recognition System - Configuration Template
# Copy this file to .env and fill in your specific values
# DO NOT commit the .env file to version control

# ===== SERVER CONFIGURATION =====
PORT=8000
HOST=0.0.0.0
API_VERSION=v1
DEBUG=false

# ===== MODEL CONFIGURATION =====
MODEL_PHASE=phase5
MODEL_PATH=outputs/checkpoints/best_model.pth
MODEL_TYPE=Efficient3DCNN
INFERENCE_DEVICE=cpu
# Use 'cuda' if you have a GPU available

# ===== VIDEO PROCESSING =====
MAX_VIDEO_SIZE_MB=100
SUPPORTED_FORMATS=mp4,avi,mov,mkv
FRAME_RATE=30
VIDEO_RESOLUTION=224

# ===== API SETTINGS =====
MAX_WORKERS=4
REQUEST_TIMEOUT=300
CORS_ORIGINS=*
UPLOAD_DIR=uploads

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ===== PATHS =====
DATA_DIR=data
OUTPUTS_DIR=outputs
MODELS_DIR=models
SRC_DIR=src

# ===== DEVELOPMENT =====
RELOAD=true
WORKERS=1

# ===== PRODUCTION SETTINGS =====
# Uncomment and set these for production deployment
# SECRET_KEY=your-secret-key-here
# ENVIRONMENT=production
# DATABASE_URL=sqlite:///./app.db
# REDIS_URL=redis://localhost:6379

# ===== RENDER DEPLOYMENT =====
# These will be automatically set by Render
# RENDER=true
# PYTHON_VERSION=3.9

# ===== ACTIVITY CLASSES =====
# Current supported activities (can be updated)
ACTIVITY_CLASSES=walking_with_dog,swimming,biking,weight_lifting,jumping_jacks,pullups,pushups,typing,brushing_teeth

# ===== PERFORMANCE MONITORING =====
ENABLE_METRICS=true
METRICS_PORT=9090
PERFORMANCE_LOG=true

# ===== FRONTEND INTEGRATION =====
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:8000

# ===== FILE STORAGE =====
# For production, you might want to use cloud storage
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# S3_BUCKET_NAME=your-bucket-name
# STORAGE_TYPE=local  # or 's3' for cloud storage

# ===== NOTIFICATION SETTINGS =====
# For sending notifications about processing status
# EMAIL_SMTP_SERVER=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password